{
  "name": "d3-thematika",
  "version": "0.0.1",
  "type": "module",
  "main": "rollup_config.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build:demo": "node scripts/build-demo.js",
    "predeploy": "npm run build && npm run build:demo",
    "deploy": "gh-pages -d demoPages -m 'Deploy demo pages'"
  },
  "author": "shimizu",
  "license": "ISC",
  "description": "D3.jsベースの静的主題図作成ライブラリ - レイヤーベース設計で美しい地図を簡単に作成",
  "keywords": [
    "d3",
    "d3js",
    "map",
    "thematic-map",
    "visualization",
    "geojson",
    "svg",
    "cartography",
    "choropleth",
    "layer-based"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shimizu/d3-thematika.git"
  },
  "bugs": {
    "url": "https://github.com/shimizu/d3-thematika/issues"
  },
  "homepage": "https://github.com/shimizu/d3-thematika#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "@types/d3-contour": "^3.0.6",
    "@types/d3-drag": "^3.0.7",
    "d3-contour": "^4.0.2",
    "d3-delaunay": "^6.0.4",
    "d3-drag": "^3.0.0",
    "d3-force": "^3.0.0",
    "d3-geo": "^3.1.1",
    "d3-geo-projection": "^4.0.0",
    "d3-path": "^3.1.0",
    "d3-polygon": "^3.0.1",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.1.0",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.2.0",
    "geotiff": "^2.1.4-beta.0",
    "rollup": "^4.44.2",
    "serve": "^14.2.4",
    "textures": "^1.2.3",
    "typedoc": "^0.28.7"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/d3-delaunay": "^6.0.4",
    "@types/d3-force": "^3.0.10",
    "@types/d3-geo": "^3.1.0",
    "@types/d3-path": "^3.1.1",
    "@types/d3-polygon": "^3.0.2",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-scale-chromatic": "^3.1.0",
    "@types/d3-selection": "^3.0.11",
    "@types/d3-shape": "^3.1.7",
    "@types/geojson": "^7946.0.16",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "gh-pages": "^6.3.0",
    "jest": "^30.0.4",
    "jsdom": "^26.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^3.0.0",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.2"
  }
}
